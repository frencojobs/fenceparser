{
  "name": "fenceparser",
  "version": "2.0.0",
  "description": "A well-tested parser for parsing metadata out of fenced code blocks in Markdown",
  "keywords": [
    "markdown"
  ],
  "repository": "frencojobs/fenceparser",
  "license": "MIT",
  "author": "Frenco <hey@frenco.dev>",
  "type": "module",
  "exports": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "jest"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "prettier": "minimalistic",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    },
    "ignorePatterns": "dist"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testMatch": [
      "<rootDir>/**/*.(spec|test).{ts,tsx,js,jsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "packageManager": "pnpm@7.6.0",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "lint-staged": "^13.0.3",
    "minimalistic": "^1.0.0",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^27.0.4",
    "tsup": "^4.13.1",
    "typescript": "^4.3.5"
  }
}
