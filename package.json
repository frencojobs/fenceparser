{
  "name": "fenceparser",
  "version": "2.0.0",
  "description": "A well-tested parser for parsing metadata out of fenced code blocks in Markdown",
  "keywords": [
    "markdown"
  ],
  "repository": "frencojobs/fenceparser",
  "license": "MIT",
  "author": "Frenco <hey@frenco.dev>",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "format": "prettier -w . --cache",
    "test": "vitest",
    "version": "changeset version && pnpm run format"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "prettier": "@frenco/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": "@frenco/eslint-config",
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.1",
    "@frenco/eslint-config": "^1.0.0",
    "@frenco/prettier-config": "^1.0.0",
    "@tsconfig/node16-strictest": "^1.0.3",
    "c8": "^7.12.0",
    "eslint": "^8.20.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.6",
    "vitest": "^0.19.1"
  },
  "packageManager": "pnpm@7.6.0"
}
