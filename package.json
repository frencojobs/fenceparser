{
  "name": "fenceparser",
  "version": "2.0.0",
  "description": "A well-tested parser for parsing metadata out of fenced code blocks in Markdown",
  "keywords": [
    "markdown"
  ],
  "repository": "frencojobs/fenceparser",
  "license": "MIT",
  "author": "Frenco <hey@frenco.dev>",
  "type": "module",
  "exports": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "watch": "tsup --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "prettier": "@frenco/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": "@frenco/eslint-config",
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testMatch": [
      "<rootDir>/**/*.(spec|test).{ts,tsx,js,jsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@frenco/eslint-config": "^1.0.0",
    "@frenco/prettier-config": "^1.0.0",
    "@types/jest": "^27.0.1",
    "eslint": "^8.20.0",
    "jest": "^27.0.6",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^27.0.4",
    "tsup": "^4.13.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.6.0"
}
